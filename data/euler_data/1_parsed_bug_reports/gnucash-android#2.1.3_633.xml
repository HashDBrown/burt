<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bug>
    <id>633</id>
    <title>App crashes when changing orientation while viewing reports</title>
    <description>
        <paragraph id="1">
            <sentence id="1.1">#### Steps to reproduce the behaviour</sentence>
            <sentence id="1.2">1. Open one of the reports (pie chart, line chart, bar chart or sheet).</sentence>
            <sentence id="1.3">2. Turn the phone to change the screen orientation.</sentence>
        </paragraph>
        <paragraph id="2">
            <sentence id="2.1">#### Expected behaviour</sentence>
            <sentence id="2.2">Report shows in the new screen orientation.</sentence>
        </paragraph>
        <paragraph id="3">
            <sentence id="3.1">#### Actual behaviour</sentence>
            <sentence id="3.2">App crashes.</sentence>
        </paragraph>
        <paragraph id="4">
            <sentence id="4.1">#### Software specifications</sentence>
            <sentence id="4.2">* GnuCash Android version: 2.1.3</sentence>
            <sentence id="4.3">* System Android version: Android 6.0.1, CyanogenMod 13.0</sentence>
            <sentence id="4.4">* Device type: Nexus 4</sentence>
        </paragraph>
    </description>
</bug>
